package com.company;

import java.util.Scanner;

public class SumNaturalNum {

    int num1;
    int sum = 0;

    public SumNaturalNum(){

    }


    public void  SumNaturalNum(){

        Scanner scan = new Scanner(System.in);

        System.out.print("Enter the Number to find summation of all natural numbers:");
        num1 = scan.nextInt();

        for (int i=0; i<=num1; i++) {
            sum=sum+i;
        }

        System.out.print("Summation of all natural numbers upto "+ num1 +" is :" + sum);

    }

}
