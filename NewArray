package com.company;

import java.util.Scanner;

public class Newarray {

    int num1;
    int totalseats = 2;
    int sum = 0;

    public Newarray(){
    }

    public void Newarray(){

        String members[] = new String[totalseats];

        for (int i=0; i<totalseats; i++){
            Scanner scan = new Scanner(System.in);

            System.out.print("Enter the Name of member on seat "+i+"\n");
            members[i] = scan.nextLine();
        }

        for (int i=0; i<totalseats; i++) {
            System.out.print("Seat " + (i+1) + " allocated to " + members[i]+"\n");
        }




    }


}
