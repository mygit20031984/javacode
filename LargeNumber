package com.company;

import java.util.Scanner;

public class NewLarge {

    private int num1;
    private int num2;
    private int num3;
    private boolean num4;



    public NewLarge(){

    }


    public void NewLarge(){

        Scanner scan = new Scanner(System.in);

        System.out.print("Enter the number1:");
        num1 = scan.nextInt();

        System.out.print("Enter the number2:");
        num2 = scan.nextInt();

        System.out.print("Enter the number3:");
        num3 = scan.nextInt();
        scan.close();


        num4 = (num1>num2) ? true:false;

        if(num4==true){

            if(num1 > num3) {
                System.out.print("Num1 is biggest:");
            }
            else {
                System.out.print("Num3 is biggest:");
            }

        }
        else{
            if(num2>num3) {
                System.out.print("Num2 is biggest:");
            }
            else {
                System.out.print("Num3 is biggest:");
            }
        }


    }



}
